generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Admin {
  id        String   @id @default(cuid())
  username  String   @unique
  password  String   // Será encriptada com bcrypt
  createdAt DateTime @default(now())

  @@map("Admin")
}

model Evento {
  id            String    @id @default(cuid())
  titulo        String
  descricao     String?
  data          DateTime
  local         String
  imagemUrl     String?
  totalCapacity Int       // Capacidade total por horário ou por evento
  
  // NOVO: Lista de horários disponíveis selecionados pelo admin (ex: ["12:00", "18:30"])
  availableSlots String[]  @default([])

  active        Boolean   @default(true)
  reservas      Reserva[]
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt
}

model Usuario {
  id    String @id @default(cuid())
  email String @unique
  senha String
}

model Reserva {
  id                String   @id @default(cuid())
  nome              String
  telefone          String
  email             String?
  quantidadePessoas Int      // Quantos lugares esta reserva ocupa
  
  // NOVO: Horário específico selecionado pelo cliente
  horario           String   

  aceitaPromocoes   Boolean  @default(false)
  
  // Relacionamento com o Evento
  eventoId          String
  evento            Evento   @relation(fields: [eventoId], references: [id], onDelete: Cascade)

  createdAt         DateTime @default(now())
}